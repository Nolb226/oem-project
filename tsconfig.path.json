{
    "compilerOptions": {
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@hooks/*": ["src/hooks/*"],
            "@pages/*": ["src/pages/*"],
            "@routes/*": ["src/routes/*"],
            "@types/*": ["src/types/*"],
            "@constants/*": ["src/constants/*"],
            "@utils/*": ["src/utils/*"],
            "@/*": ["src/*"]
        }
    }
}
